<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkShadeOfPrimary"
    tools:context=".NotificationsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAQ Chatbot"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/answerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your query below"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/queryEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter your query here..."
        android:textColor="#fff"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/askBotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ask Bot"
        android:background="@color/colorPrimary"
        android:textColor="#000"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please set-up the backend chatbot before asking the bot!"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/ipEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="192.168.0.26"
        android:textColor="#fff"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter IPv4 Address of backend chatbot local machine."
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_margin="2dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/ipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Set backend IP"
        android:background="@color/colorPrimary"
        android:textColor="#000"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="14dp"/>

</LinearLayout>